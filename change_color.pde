void change_color(String new_color){
    switch (new_color) {
        case ("RED") :
            fill(#e74c3c);
            stroke(#e74c3c);
        break;	
        
        case ("ORANGE") :
            fill(#e67e22);
            stroke(#e67e22);
        break;	

        case ("YELLOW") :
            fill(#f1c40f);
            stroke(#f1c40f);
        break;	
        case ("YELLOW_GREEN") :
            fill(#1abc9c);
            stroke(#1abc9c);
        break;	
        case ("GREEN") :
            fill(#2ecc71);
            stroke(#2ecc71);
        break;	
        case ("BLUE") :
            fill(#3498db);
            stroke(#3498db);
        break;	
        case ("PORPLE") :
            fill(#9b59b6);
            stroke(#9b59b6);
        break;	
        case ("BLACK") :
            fill(#333333);
            stroke(#333333);
        break;
        case ("WHITE") :
            fill(#ecf0f1);
            stroke(#ecf0f1);
        break;	
    }
}